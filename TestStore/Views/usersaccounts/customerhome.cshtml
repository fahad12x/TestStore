@{
    ViewData["Title"] = "Home Customer";
    Layout = "_LayoutCustomer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364); /* خلفية مموجة */
            margin: 0;
            padding: 0;
            color: #fff;
        }

        h1, h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .container-fluid {
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 20px;
            width: 100%;
            max-width: 300px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.5);
            }

            .card img {
                width: 100%;
                border-radius: 8px;
                margin-bottom: 15px;
            }

            .card h5 {
                color: #38ef7d;
                margin: 10px 0;
                font-size: 18px;
                font-weight: bold;
            }

            .card .card-text {
                margin-bottom: 10px;
                font-size: 14px;
            }

        .btn-primary {
            background: linear-gradient(to right, #11998e, #38ef7d);
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #38ef7d, #11998e);
            }
    </style>
</head>
<body>
    <h1>Welcome, Welcome, Noura SuberMarket @ViewData["name"]</h1>

    <h2>Discounted Items</h2>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="~/images/@item.imgfile" class="card-img-top" alt="Item Image">
                    <div class="card-body">
                        <p class="card-text">Id: @item.Id</p>
                        <h5 class="card-title">@item.name</h5>
                        <p class="card-text">Price: @item.price</p>
                        <p class="card-text">Discount: @item.discount%</p>
                    </div>
                    <a asp-controller="items" asp-action="Details" class="btn btn-primary" asp-route-id="@item?.Id">More</a>
                </div>
            }
        </div>
    </div>
</body>
</html>
