@model TestStore.Models.usersaccounts
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('~/images/kk.png') no-repeat center center fixed; /* Use the image you prefer */
            background-size: cover; /* To cover the entire screen */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #fff;
        }

        .login-container {
            background: rgba(0, 123, 255, 0.8); /* Blue background with transparency */
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 40px;
            width: 100%;
            max-width: 360px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

            .login-container h1 {
                font-size: 28px;
                margin-bottom: 20px;
                color: #ffffff;
                font-weight: 600;
            }

            .login-container img {
                width: 100px; /* Adjust the width of the logo */
                height: auto; /* Maintain aspect ratio */
                margin-bottom: 20px; /* Space between logo and the heading */
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 8px;
                display: block;
                color: #d9d9d9;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            background: rgba(255, 255, 255, 0.8);
            color: #333;
            margin-top: 5px;
        }

            .form-control:focus {
                outline: none;
                border: 2px solid #4caf50;
            }

        .btn {
            background: #007BFF; /* Blue color for the button */
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            font-size: 16px;
            font-weight: bold;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s ease-in-out;
        }

            .btn:hover {
                background: #0056b3; /* Darker blue when hovering */
            }

        .form-check {
            text-align: left;
            margin-top: 10px;
        }

            .form-check input {
                margin-right: 8px;
            }

            .form-check label {
                color: #d9d9d9;
            }

        .mt-3 {
            margin-top: 20px;
            color: #d9d9d9;
        }

            .mt-3 a {
                color: #000000;
                text-decoration: none;
            }

                .mt-3 a:hover {
                    text-decoration: underline;
                }

        .error-message {
            color: #ff4d4d;
            margin-top: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Logo Image -->
        <img src="~/images/logo.png" alt="Logo" />

        <h1>Login</h1>
        <form asp-action="Login">
            <div class="form-group">
                <label for="username">User Name</label>
                <input id="username" name="na" class="form-control" placeholder="Enter your name" />
            </div>
            <div class="form-group">
                <label for="password">User Password</label>
                <input type="password" id="password" name="pa" class="form-control" placeholder="Enter your password" />
            </div>
            <div class="form-check">
                <input type="checkbox" name="auto" id="auto-login" />
                <label for="auto-login">Auto login</label>
            </div>
            <button type="submit" class="btn">Login</button>
            <div class="form-group mt-3">
                <p>Don’t have an account? <a asp-action="registration" asp-controller="usersaccounts">Register here</a></p>
            </div>
            <p class="error-message">@ViewData["message"]</p>
        </form>
    </div>
</body>
</html>
