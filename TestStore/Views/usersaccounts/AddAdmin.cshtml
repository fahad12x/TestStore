@model TestStore.Models.usersaccounts

@{
    Layout = "_Layoutmaster";

}
<h1>AddAdmin</h1>

<div class="form-container">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddAdmin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="UserName">Name</label>
                    <input type="text" id="UserName" name="UserName" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.name)</span>
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.pass)</span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.pass)</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>