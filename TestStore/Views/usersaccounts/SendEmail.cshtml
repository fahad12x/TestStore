@{

    Layout = "_Layoutmaster";


}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


</head>
<body>
    <h1>Send Email</h1>
    <div class="form-container">
        <form asp-action="SendEmail">
            <div class="form-group">
                <label for="address">Write your Email Address</label>
                <input type="email" required name="address" class="form-control" />

                <div class="form-group">
                    <label for="Message">Message</label>
                    <textarea name="body" required rows="4" class="form-control"></textarea>
                </div>
                <input type="submit" value="Send Email" class="btn btn-default" />
                <p>@ViewData["message"]</p>
            </div>
        </form>
    </div>
</body>
</html>


